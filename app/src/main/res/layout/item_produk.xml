<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageview_cover_art"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_128"
            android:src="@drawable/img_no_image"
            android:scaleType="centerCrop"/>

        <ImageView
            android:id="@+id/imageview_favorite"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="bottom|end"/>

    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_4"
        android:paddingLeft="@dimen/_8"
        android:paddingRight="@dimen/_8"
        android:paddingBottom="@dimen/_4"
        android:gravity="center_horizontal"
        android:background="@color/blackTransparent50" >

        <TextView
            android:id="@+id/textview_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="@font/nunitosansregular"
            tools:text="Judul" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/f_10"
        android:fontFamily="@font/nunitosansregular"
        android:maxLines="3"/>

    <TextView
        android:id="@+id/textview_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/_4"
        android:paddingLeft="@dimen/_8"
        android:paddingRight="@dimen/_8"
        android:paddingBottom="@dimen/_4"
        android:textColor="@android:color/holo_red_light"
        android:textSize="12sp"
        tools:text="Rp 0"
        android:fontFamily="@font/nunitosansregular"
        android:layout_gravity="start"/>

</LinearLayout>