<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.LoginActivity"
    android:padding="20dp"
    android:background="@drawable/bg_login"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/LKeterangan"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Masukkan Kode Aktivasi"
            android:textSize="20sp"/>

        <View
            android:layout_width="220dp"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#91C369"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:id="@+id/LAktivasi"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="5dp">
            <EditText
                android:layout_width="wrap_content"
                android:textSize="@dimen/_20"
                android:background="@drawable/border_edit_text"
                android:layout_height="wrap_content"
                android:maxLength="1"
                android:hint="0"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:id="@+id/et1"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20"
                android:background="@drawable/border_edit_text"
                android:maxLength="1"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:hint="0"
                android:id="@+id/et2"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20"
                android:background="@drawable/border_edit_text"
                android:maxLength="1"
                android:hint="0"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:inputType="number"
                android:id="@+id/et3"/>

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_20"
                android:background="@drawable/border_edit_text"
                android:maxLength="1"
                android:hint="0"
                android:layout_marginLeft="5dp"
                android:inputType="number"
                android:id="@+id/et4"/>

            </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:visibility="gone"
        android:id="@+id/LLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selamat Datang,"
            android:textSize="30sp"
            android:layout_marginBottom="100dp"
            android:textColor="#BC000000"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/etUsername"
                android:hint="Username" />
        </com.google.android.material.textfield.TextInputLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/etPassword"
                    android:hint="Password"
                    android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/bPassword"
                android:background="@drawable/ic_visibility"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="8dp"
                android:layout_gravity="center"
                android:layout_marginRight="8dp"
                android:layout_width="24dp"
                android:layout_height="24dp"
                />

        </RelativeLayout>

        <Button
            android:layout_gravity="right"
            android:layout_width="150dp"
            android:text="Login"
            android:clickable="true"
            android:textColor="#fff"
            android:id="@+id/btnLogin"
            android:focusable="true"
            android:background="@drawable/btn_login"
            android:layout_height="40dp" />
    </LinearLayout>

</LinearLayout>